{
  "name": "youtube-live-summarizer",
  "version": "1.0.0",
  "description": "Aplicativo para fazer resumo de lives no YouTube usando IA",
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "electron-builder",
    "dist": "npm run build && electron-builder"
  },
  "keywords": [
    "youtube",
    "live",
    "summarizer",
    "ai",
    "transcript",
    "desktop",
    "electron"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@tailwindcss/typography": "^0.5.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "autoprefixer": "^10.4.0",
    "cheerio": "^1.1.2",
    "dexie": "^4.2.0",
    "dexie-export-import": "^4.1.4",
    "fluent-ffmpeg": "^2.1.3",
    "form-data": "^4.0.4",
    "lucide-react": "^0.300.0",
    "next": "^14.0.0",
    "openai": "^4.0.0",
    "postcss": "^8.4.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.0",
    "yt-dlp-exec": "^1.0.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "eslint": "8.57.1",
    "eslint-config-next": "15.4.6",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.youtubelivesummarizer.app",
    "productName": "YouTube Live Summarizer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "out/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "electron/assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "electron/assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "electron/assets/icon.png"
    }
  }
}
